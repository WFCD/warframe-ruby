    #
    # Module names are 'routes' to this API. See {Warframe::REST::API::Alerts Alerts} for example.
    module API
  <% @constants.map do |x| -%>
    <%= "include Warframe::REST::API::#{x}" %>
  <% end -%>
  end
  end
end
